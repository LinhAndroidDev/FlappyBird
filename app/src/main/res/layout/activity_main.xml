<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity"
    android:id="@+id/play">

    <ImageView
        android:id="@+id/bg1"
        android:background="@drawable/bg_flbb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:id="@+id/bg2"
        android:background="@drawable/bg_flbb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/bird"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bird1"
        android:layout_width="50dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/raceRoad"
        android:background="@drawable/raceroad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/raceRoad1"
        android:background="@drawable/raceroad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/tl1"
            android:src="@drawable/icon_tenlua"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/tl2"
            android:src="@drawable/icon_tenlua"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/tl3"
            android:src="@drawable/icon_tenlua"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/tl4"
            android:src="@drawable/icon_tenlua"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/tl5"
            android:src="@drawable/icon_tenlua"
            android:layout_width="90dp"
            android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/startGame"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_start" />

    <TextView
        android:id="@+id/myScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="0"
        android:textColor="#E82012"
        android:textSize="32sp"
        android:textStyle="bold" />
</RelativeLayout>